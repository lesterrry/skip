= render 'blocks/title', button_title: t('global.to_home'), title: t('.title_html'), subtitle: t('.subtitle')
.news.white-block
	- 3.times do |i|
		%div
			%div
				%h3= t ".news.#{i}.title"
				%p= t ".news.#{i}.body"
				= render 'blocks/button', title: t(".news.#{i}.button"), link: nil, show_arrow: true
			= image_tag 'news/1.png', class: 'scaling'
.mailing-list
	%h1= explode_span t('.mailing.title'), 'stretching'
	.white-block
		%input{ type: 'text', placeholder: t('.mailing.address') }
			-# %h2.button= t '.mailing.sub'
			= render 'blocks/button', title: t('.mailing.sub'), link: nil, show_arrow: false
