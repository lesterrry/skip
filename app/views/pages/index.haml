= render partial: 'blocks/menu'
%div
	.title
		.content
			%h1= t '.title'
			%p= t '.subtitle'
		= render 'blocks/button', title: 'english', show_arrow: true
	.news.white-block
		- %w[a b c].each do |i|
			%div
				%div
					%h3= t ".news.#{i}.title"
					%p= t ".news.#{i}.body"
					= render 'blocks/button', title: t(".news.#{i}.button"), show_arrow: true
				= image_tag t(".news.#{i}.image")
	.mailing-list
		%h1= t '.mailing.title'
		.white-block
			%input{ type: 'text', placeholder: t('.mailing.address') }
				%h2.button= t '.mailing.sub'
= render partial: 'blocks/footer'
